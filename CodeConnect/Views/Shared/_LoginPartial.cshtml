@using Microsoft.AspNetCore.Identity
@using CodeConnect.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var chosenUserName = Context.Session.GetString("ChosenUserName");
}

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @chosenUserName</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0">Logout</button>
            </form>
        </li>

    </ul>
}
