@model IEnumerable<Project>


@foreach (var project in Model)
{
    <tr>
        <td>
            <a class="room-buttons" asp-controller="Home" asp-action="Project" asp-route-id="@project.Id">
                @project.Name
            </a>
        </td>
        <td>@project.Owner</td>
        <td>@project.CreationDate</td>
        <td>
            <button class="btn btn-info btn-sm">Edit</button>
            <form method="post" asp-controller="Home" asp-action="DeleteProject" asp-route-id="@project.Id" onsubmit="return confirm('Are you sure you want to delete this project?');">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
    </tr>
                        
}
                    

